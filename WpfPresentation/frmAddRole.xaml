<Window x:Class="WpfPresentation.frmAddRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentation"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Add Staff Role" Height="250" Width="420" Loaded="Window_Loaded">

    <Grid Margin="0,0,-21,-16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>

        <!-- Header-->
        <TextBlock Text="Add Role to Staff" FontWeight="Bold" Margin="124,16,0,0" 
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <!-- Staff Id-->
        <Label Content="Staff ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,33,0,0" />
        <TextBox x:Name="txtStaffID" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"  Margin="102,37,0,0" />

        <!-- Role selection-->
        <Label Content="Select Role:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" />
        <ComboBox x:Name="roleComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="102,70,0,0" />

        <!-- Add role button-->
        <Button Content="Add Role" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="151,112,0,0" Click="AddRoleButton_Click" />
    </Grid>
</Window>
